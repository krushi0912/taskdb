<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Management System</title>
  <link rel="stylesheet" href="/css/adminmodule/menubar.css">
  <link rel="stylesheet" href="/css/loginmodule/popup.css">
  <link rel="stylesheet" href="/bootstrap_icon_css/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css">
  <script src="/boxicon/dist/boxicons.js"></script>
  <script src="/js/bootstrap.js"></script>
  <link rel="stylesheet" href="/boxicon/css/boxicons.min.css">
  <script src="/sweetalert2/sweetalert2.min.js"></script>
  <script src="/js/loginmodule/popup.js"></script>
  <style>
    .cards{
      flex-wrap: wrap;
      margin-top: 20px;
    }
  </style>
</head>

<body onload="getCategoryData()">
  <div class="container-div">
    <div class="admin">
      <%- include('../partials/adminmenubar') %>
        <div class="rightbar">
          <%- include('../partials/navigation') %>
            <div style="margin-top: 110px;">
              <div class="row1 my-4">
                <div class="search float-start mx-3 ">
                  <input type="text" placeholder="Search Category.." class="rounded py-2 px-3 " tabindex="1"
                    oninput="searchCategoryData(this.value)">
                </div>
                <div class="addtasks">
                  <input type="button" value="+  Add Category" class="btn btn-dark float-end mx-2 my-2 px-3"
                    tabindex="2" onclick="openPopup4()">
                </div>
              </div>
            </div>
            <div>
              <div class="cards d-flex" id="category">

              </div>
            </div>
            <div class="addregistrationcontainer" id="category-detail">
              <div id="viewCategory" class="">

              </div>
            </div>
        </div>
    </div>
    <div class="addregistrationcontainer" id="addCategory">
      <div class="regForm width:fit-content p-4" style="background-color: white;">
        <div class="registration">
          <div class="row mb-3">
            <div class="col-md-11">
              <h2 class="text-primary text-center">Add Category </h2>
            </div>
            <div class="col-md-1">
              <i class='bx bxs-x-circle text-danger fs-2' onclick="closePopup4()"></i>
            </div>
          </div>
          <form enctype="multipart/form-data" id="categoryForm">
            <div class="row">
              <div class="col-md-12">
                <p class="bg-danger text-white text-center" id="error" style="display: none;"></p>
              </div>
            </div>
            <div class="row mb-3">
              <label class="text-primary">Category Name :</label>
              <input type="text" class="form-control" tabindex="2" id="category_name" name="category_name"
                placeholder="Enter Category Name">
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <input type="button" class="btn btn-primary form-control" value="Submit" tabindex="9"
                  onclick="addNewCategory()">
              </div>
              <div class="col-md-6">
                <input type="reset" class="btn btn-danger form-control" value="Reset" tabindex="10">
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/adminmodule/category.js"></script>
  <script src="/js/adminmodule/deletedata.js"></script>
</body>

</html>