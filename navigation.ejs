<html>

<head>
  <link rel="stylesheet" href="/css/employee/employee.css" />
  <link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css" />
  <script src="/sweetalert2/sweetalert2.min.js"></script>
  <script src="/js/employee/validation.js"></script>
</head>

<body>
  <div style="position: fixed; background-color: white; z-index: 1; margin-left:-35px; margin-right: -50px; box-shadow: 5px 8px 10px 5px rgb(192, 191, 191);">
    <div class="profilename">
      <div class="float-start">
        <h2 class="text-center m-3 ms-5">Admin</h2>
      </div>
      <div class="d-flex float-end" style="margin-left: 650px;">
        <div class="bell">
          <i class="bi bi-bell" onclick="showNotification()"></i>
        </div>
        <div>
          <div class="profile d-flex m-2 border rounded-pill align-items-center" onclick="showDropdown()">
            <div class="m-2 h-50">
              <img src="" alt="User Img" class="img-thumbnail rounded-circle border border-dark"
                style="width: 50px; height: 50px" id="admin_dashboard_img" />
            </div>
            <p id="user_name" class="text-white" style="font-size: 18px; margin-top: 12px"></p>
          </div>

          <div id="dropdown" class="dropdown-content me-5">
            <a type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
              onclick="loadAdminProfile()">Profile</a>
            <a href="/admin/changepassword">Change Password</a>
            <a onclick="logoutPopup()">Logout</a>
          </div>
        </div>
        <%- include('../adminmodule/profile.ejs') %>
      </div>
    </div>
  </div>
  <script src="/js/adminmodule/adminprofile.js"></script>
</body>

</html>